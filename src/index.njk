---
title: mier
layout: base.njk
others: <link rel='stylesheet' href='/static/css/index.css'>
onload: onload='chooseRandomString();'
---

<div id="main-container">
    <div id="title">juan<br>mier</div>
    <div class="marquee" id="scroll-string"></div>

    <div id="socials">
        {% for item in collections.socials %}
            <a href="{{ item.data.target }}" rel="noopener noreferrer">
                <span class="dot"></span> {{ item.data.title }}
            </a>
        {% endfor %}
    </div>

    <div id="buttons">
        <a class="button" onclick="toggleVisibility('project-section');">projects</a>
        <a class="button" onclick="toggleVisibility('about-section');">about</a>
    </div>
</div>

<section id="project-section" hidden>
    <h1>projects.</h1>
    <div id="projects">
        {% for project in collections.projects %}
            <div class="project">
                <h1>{{ project.data.title }}</h1>

                <p>{{ project.data.desc }}</p>

                <div class="project-links">
                    <a href="/{{ project.data.title | slug }}/" target="_blank" rel="noopener noreferrer">read more</a>
                    {% if project.data.source %}
                        <a href="{{ project.data.source }}" target="_blank" rel="noopener noreferrer">source code</a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</section>

<section id="about-section" hidden>
