---
title: mier
layout: base.njk
css: /static/css/index.css
js: /static/js/index.js
---


<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">

<div id="main-container">
    <div id="title">juan<br>mier</div>
    <div id="marquee"><noscript>js isn't enabled :')</noscript></div>

    <div id="socials">
        {% for item in collections.socials %}
            <a href="{{ item.data.target }}" rel="noopener noreferrer">
                <span class="dot"></span> {{ item.data.title }}
            </a>
        {% endfor %}
    </div>

    <div id="buttons">
        <span class="button" id="project-button">projects</span>
        <span class="button" id="about-button">about</span>
    </div>

</div>

{% import "src/macros.njk" as macros %}

<section id="project-section" class="section">
    <h1>projects.</h1>
    <div class="projects" id="general-projects">
        {% for project in collections.projects %}
            {{ macros.renderProject(project) }}
        {% endfor %}
    </div>

    <span class="button" id="others-button">show all</span>
    <section id="others-section" class="section">
        <h2>other projects.</h2>
        <div id="others-section" class="projects">
            {% for project in collections.otherprojects %}
                {{ macros.renderProject(project) }}
            {% endfor %}
        </div>
    </section>
</section>

<section id="about-section" class="section">
    <div id="about" class="card">
        {% renderFile "./src/content/about.md" %}
    </div>
</section>
