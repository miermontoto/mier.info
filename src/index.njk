---
layout: base.njk
css: index
js: index
---

<div id="main-container">
    <div id="title">juan<br>mier</div>
    <div id="marquee" class="marquee">⠀<noscript>js isn't enabled :')</noscript></div>

    <div id="socials">
        {% for link in socials %}
            <a href="{{ link.url }}" rel="noopener noreferrer">
                <span class="dot"></span> {{ link.text }}
            </a>
        {% endfor %}
    </div>

    <div id="buttons">
        <span class="button" id="project-button">projects</span>
        <span class="button" id="about-button">about</span>
    </div>
</div>

{% import "src/static/macros.njk" as macros %}

<section id="project-section" class="section">
    <h1>projects.</h1>
    <div id="featured" class="carded">
        {% for project in collections.project %}
            {% if project.data.img %}
                <div class="project card">
                    <div class="project-img">
                        <img src="/assets/media/projects/{{ project.fileSlug }}/front.webp" alt="{{ project.data.title }} image" class="main">
                        <img src="/assets/media/projects/{{ project.fileSlug }}/back.webp" alt="{{ project.data.title }} alt image" class="hover">
                    </div>

                    <div class="project-title">
                        {% if project.data.demo %}
                            <a href="{{ project.data.demo }}" rel="noopener noreferrer">{{ project.data.title }}</a>
                        {% else %}
                            {{ project.data.title }}
                        {% endif %}
                    </div>

                    <div class="project-description">
                        {{ project.data.desc }}
                    </div>

                    <div class="project-links">
                        {% if project.data.source %}
                            <a href="{{ project.data.source }}" target="_blank" rel="noopener noreferrer" aria-label="source code for {{ project.data.title }}">
                                {{ macros.renderIcon('git') }}
                            </a>
                        {% endif %}
                        {% for link in project.data.links %}
                            <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer">{{ link.icon | safe }}</a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <hr>
    <div id="project-list">
        <ul>
            {% for project in collections.project %}
                <li class="project {{ project.data.star }}" id="{{ project.data.title | slug }}">
                    <div class="project-title">
                        {% if project.data.demo %}
                            <a href="{{ project.data.demo }}" rel="noopener noreferrer">{{ project.data.title }}</a>
                        {% elif project.data.source %}
                            <a href="{{ project.data.source }}" rel="noopener noreferrer">{{ project.data.title }}</a>
                        {% else %}
                            {{ project.data.title }}
                        {% endif %}
                    </div>

                    <div class="project-links">
                        {% if project.data.source and project.data.demo %}
                            <a href="{{ project.data.source }}" target="_blank" rel="noopener noreferrer" aria-label="source code for {{ project.data.title }}">
                                {{ macros.renderIcon('git') }}
                            </a>
                        {% endif %}
                        {% for link in project.data.links %}
                            <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer">{{ link.icon | safe }}</a>
                        {% endfor %}
                    </div>

                    <div class="project-description">
                        {{ project.data.desc | safe }}
                    </div>

                    <div class="project-tech">
                        {{ macros.renderIcons(project.data.icons) }}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>

<section id="about-section" class="section">
    <div id="experience-container">
        <h1>experience.</h1>
        <div id="experience" class="carded">
            {% for experience in collections.experience %}
                <div class="card {{ experience.data.class }}" id="{{ experience.data.name | slug }}">
                    <div class="card-title-col">
                        <h1 class="card-title">
                            {% set logo = '/assets/icons/exp/' + (experience.data.logo or experience.data.name) + '.png' %}
                            <img src="{{ logo }}" class="experience-logo" alt="{{ experience.data.name }} logo">
                            {{ experience.data.name }}
                        </h1>
                        {% if experience.data.role %}
                            <b>{{ experience.data.role }}</b>
                        {% endif %}
                        {% if experience.data.period %}
                            <br>
                            <i>{{ experience.data.period }}</i>
                        {% endif %}
                    </div>
                    <div class="card-description">
                        {{ experience.content | safe }}
                    </div>
                    {% if experience.data.icons %}
                        <div class="card-bottom">
                            <div class="card-icons">
                                {{ macros.renderIcons(experience.data.icons) }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    <br>
    <div id="about-container">
        <div id="about">
            <h1>about.</h1>
            {% renderFile "./src/content/about.md" %}
        </div>
    </div>
</section>

<video id="background" autoplay loop muted playsinline></video>
<div id="overlay">
    <span id="fullscreen-background" class="button light">⛶</span>
    <span id="stop-background" class="button light">⨯</span>
</div>
