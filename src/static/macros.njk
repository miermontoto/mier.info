---
permalink: false
---

{% macro renderIcons(icons) %}
    {% for icon in icons %}
        <i class="{{ icon }} icon"></i>
    {% endfor %}
{% endmacro %}

{% macro renderProjects(projects) %}
    <table id="projects">
        {% for project in projects %}
            <tr> {{ renderProject(project) }} </tr>
        {% endfor %}
    </table>
{% endmacro %}

{% macro renderProject(project) %}
    <td class="project-title">
        {% if project.data.demo %}
            <a href="{{ project.data.demo }}" rel="noopener noreferrer">
                {{ project.data.title }}
            </a>
        {% else %}
            {{ project.data.title }}
        {% endif %}
    </td>

    <td class="project-links">
        {% if project.data.source %}
            <a href="{{ project.data.source }}" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-square-github"></i></a>
        {% endif %}
        {% if project.data.info %}
            <br>
            <a href="{{ project.data.info }}" target="_blank" rel="noopener noreferrer">ðŸ›ˆ</a>
        {% endif %}
    </td>

    <td class="project-description">
        {{ project.data.desc | safe }}
    </td>

    <td class="project-icons">
        {{ renderIcons(project.data.icons) }}
    </td>

    <td class="project-image">
        {% if project.data.image %}
            <img src="{{ project.data.image }}" alt="{{ project.data.title }} image">
        {% endif %}
    </td>
{% endmacro %}

{% macro renderExperiences(experiences) %}
    {% for experience in experiences %}
        {{ renderExperience(experience) }}
    {% endfor %}
{% endmacro %}

{% macro renderExperience(experience) %}
    <div class="model card" id="{{ experience.data.name | slug }}">
        <div class="card-title-col">
            <h1 class="card-title">
                {% if experience.data.logo %}
                    <img src="{{ experience.data.logo }}" class="experience-logo" alt="{{ experience.data.name }} logo">
                {% endif %}
                {{ experience.data.name }}
            </h1>
            {% if experience.data.role %}
                <b>{{ experience.data.role }}</b>
            {% endif %}
            {% if experience.data.period %}
                <br>
                <i>{{ experience.data.period }}</i>
            {% endif %}
        </div>
        <div class="card-description">
            {{ experience.content | safe }}
        </div>
        {% if experience.data.icons %}
            <div class="card-bottom">
                <div class="card-icons">
                    {{ renderIcons(experience.data.icons) }}
                </div>
            </div>
        {% endif %}
    </div>
{% endmacro %}
