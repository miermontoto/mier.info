<h1>{{ title }}</h1>
<div id="project-buttons">
    {% for button in buttons %}
        <a class="button" href="{{ button.url }}">{{ button.img | safe }}{{ button.text }}</a>
    {% endfor %}
    {% if source %}
        <a href="{{ source }}" id="source" class="button"><img src="/assets/icons/tech/git.svg" class="icon invert">source</a>
    {% endif %}
</div>
<hr>
{% if content %}
    {{ content | safe }}
{% else %}
    <br> work in progress!
{% endif %}

