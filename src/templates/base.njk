<!DOCTYPE html>
<html lang="{{ lang or "en" }}">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="{{ eleventy.generator }}">
    <meta name="description" content="{{ desc or "personal portfolio website that collects all my projects and professional experiences." }}">
    <meta name="view-transition" content="same-origin">
    {% if keywords %}
        <meta name="keywords" content="{{ keywords }}">
    {% else %}
        {% keywords %}
    {% endif %}
    <meta name="author" content="Juan Mier">
    {% addStyle 'global' %}
    {% addScript 'global' %}
    <link rel="icon" href="/assets/favicon.svg" type="image/x-icon">
    <title>{{ title or "mier" }}</title>
    <script async src="https://eu.umami.is/script.js" data-website-id="58527f4f-2ded-4fc6-bd20-6ca52c11a9b7"></script>
    {% if js %}
        {% addScript js %}
    {% endif %}
    {% if css %}
        {% addStyle css %}
    {% endif %}
</head>
<body>
    {{ content | safe }}
    {% version %}
</body>
</html>
